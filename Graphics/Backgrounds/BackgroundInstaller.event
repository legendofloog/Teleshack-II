//battle backgrounds

#define BattleBackgroundTable $75A794
#define SetBattleBackground(Index, ImagePointer, TSAPointer, PalettePointer) "PUSH; ORG BattleBackgroundTable + ((Index - 1) * 0xC); POIN ImagePointer TSAPointer PalettePointer; POP"

#define FF5CaveBattleBackground 0x42
SetBattleBackground(FF5CaveBattleBackground, FF5CaveBattleBackgroundImage, FF5CaveBattleBackgroundTSA, FF5CaveBattleBackgroundPal)

